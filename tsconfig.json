{
  "compilerOptions": {
    "module": "ESNext",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src/ts",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true
    }
  },
  "include": [
    "./src/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
